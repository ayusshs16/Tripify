<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Tripify' %></title>
   <link rel="stylesheet" href="/css/style.css" >
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <%- include('../includes/navbar') %>
    <main class="container">
        <%- body %>
    </main>
    <%- include('../includes/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      document.addEventListener('shown.bs.collapse', function (e) {
        if (e.target && e.target.id === 'expandedSearch') {
          const input = e.target.querySelector('input[type="search"]');
          if (input) input.focus();
        }
      });
      // Toggle translucent navbar on scroll
      document.addEventListener('scroll', function () {
        var nav = document.querySelector('.nav-gradient');
        if (!nav) return;
        if (window.scrollY > 10) {
          nav.classList.add('nav-translucent');
        } else {
          nav.classList.remove('nav-translucent');
        }
      }, { passive: true });
    </script>
</body>
</html>
